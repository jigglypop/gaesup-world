{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@constants/*": ["constants/*"],
      "@type/*": ["type/*"],
      "@containers/*": ["containers/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"],
      "@api/*": ["api/*"],
      "@common/*": ["common/*"],
      "gaesup-world": ["./src/index.ts"]
    },
    "types": ["vite-plugin-svgr/client"]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.css",
    "src",
    "*.ts",
    "*.tsx",
    "examples",
    "dist",
    "*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
